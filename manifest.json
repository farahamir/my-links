{
  "name": "MyLinks",
  "version": "0.1",
  "description": "Organize and visualize your links using Images as shapesâ€”fully local, no sign-in, with search, drag-and-drop, and image support.",
  "permissions": [
    "storage",
    "contextMenus",
    "cookies",
    "bookmarks",
    "readingList",
    "tabs",
    "topSites",
    "favicon",
    "history"
  ],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "web_accessible_resources": [
    {
      "resources": [
        "_favicon/*"
      ],
      "extension_ids": [
        "*"
      ]
    }
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*",
    "*://*/*"
  ],
  "icons": {
    "16": "img/Mythings16.png",
    "32": "img/Mythings32.png",
    "48": "img/Mythings48.png",
    "128": "img/Mythings128.png"
  },
  "action": {
    "default_icon": "img/Mythings.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "manifest_version": 3
}
